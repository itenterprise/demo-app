<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/list_item_top_padding"
    android:paddingBottom="@dimen/list_item_bottom_padding"
    android:paddingLeft="@dimen/list_item_left_padding"
    android:paddingStart="@dimen/list_item_left_padding"
    android:paddingRight="@dimen/list_item_right_padding"
    android:paddingEnd="@dimen/list_item_right_padding"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">

	        <TextView
	            android:id="@+id/connection_item_function"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:maxLines="2"
	            android:ellipsize="end"
	            android:text="Реестр документов"
	            android:textSize="17sp" />

	    </LinearLayout>

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">

		    <ImageView
			    android:id="@+id/connection_item_status_color"
			    android:layout_width="10dp"
			    android:layout_height="10dp"
			    android:layout_margin="3dp"
			    android:layout_gravity="center_vertical"
			    android:background="@drawable/status_circle"/>

		    <TextView
			    android:id="@+id/connection_item_status"
			    android:text="Статус"
			    android:singleLine="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" />

			<TextView
			    android:id="@+id/connection_item_date"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:paddingLeft="5dp"
			    android:layout_gravity="center_vertical"
			    android:textColor="@color/darker_gray"
			    android:text="13.04.2014" />

	    </LinearLayout>

	    <TextView
		    android:id="@+id/connection_item_fio"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="10dp"
		    android:layout_marginEnd="10dp"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:singleLine="true"
		    android:text="ФИО" />
    </LinearLayout>

	<ImageView
		android:layout_width="20sp"
		android:layout_height="20sp"
		android:layout_gravity="center_vertical"
		android:src="@drawable/ic_action_next_item" />
</LinearLayout>